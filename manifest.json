{
  "manifest_version": 3,
  "name": "LinkedIn",
  "version": "1.0",
  "action": {
    "default_popup": "./pages/popup.html"
  },
  "background": {
    "service_worker": "/scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["scripts/contentScript.js"],
      "css": ["styles/contentStyles.css"]
    }
  ],
  "permissions": [
    "tabs","storage","background"
  ]
}